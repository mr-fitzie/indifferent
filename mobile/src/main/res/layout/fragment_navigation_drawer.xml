<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/keyline_2"
    android:layout_marginTop="@dimen/keyline_2"
    android:background="@color/navdrawer_background"
    android:orientation="vertical"
    tools:context=".NavigationDrawerFragment">

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:choiceMode="singleChoice"
        android:divider="@color/navdrawer_divider"
        android:dividerHeight="0.5dp" />

    <View xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="@dimen/keyline_2"
        android:layout_marginTop="@dimen/keyline_2"
        android:background="@color/navdrawer_divider"
        android:gravity="start|center_vertical" />

    <LinearLayout
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/listPreferredItemHeightSmall"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/keyline_1"
        android:paddingRight="@dimen/keyline_1">

        <ImageView
            android:id="@android:id/icon1"
            android:layout_width="@dimen/nav_icon_small"
            android:layout_height="@dimen/nav_icon_small"
            android:layout_marginEnd="@dimen/nav_icon_small_margin_right"
            android:layout_marginRight="@dimen/nav_icon_small_margin_right"
            android:src="@drawable/ic_settings" />

        <TextView
            android:id="@android:id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@string/font_fontFamily_medium"
            android:gravity="start|center_vertical"
            android:text="@string/action_settings"
            android:textColor="@color/navdrawer_text_color"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="@integer/font_textStyle_medium" />

    </LinearLayout>
</LinearLayout>
