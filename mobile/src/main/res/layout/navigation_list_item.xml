<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/activatedBackgroundIndicator"
    android:minHeight="?android:attr/listPreferredItemHeightSmall"
    android:paddingEnd="@dimen/abc_control_padding_material"
    android:paddingStart="@dimen/abc_control_padding_material">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@android:id/icon1"
        android:layout_width="@dimen/abc_dropdownitem_icon_width"
        android:layout_height="@dimen/abc_dropdownitem_icon_width"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/abc_control_inset_material"
        android:layout_marginRight="@dimen/abc_control_inset_material"
        android:src="@drawable/ic_cached" />

    <TextView
        android:id="@android:id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dip"
        android:layout_toEndOf="@android:id/icon1"
        android:layout_toRightOf="@android:id/icon1"
        android:text="text 1"
        android:textAppearance="?android:attr/textAppearanceListItem" />

    <TextView
        android:id="@android:id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@android:id/text1"
        android:layout_alignStart="@android:id/text1"
        android:layout_below="@android:id/text1"
        android:text="text 2"
        android:textAppearance="?android:attr/textAppearanceSmall" />
</RelativeLayout>